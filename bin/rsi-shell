#!/usr/bin/env bash
# rsi-shell â€” shell into container as agent user
source "$(dirname "$0")/../lib/common.sh"

if [[ $# -lt 1 ]]; then
    echo "Usage: rsi shell <name>"
    exit 1
fi

name="$1"
require_running "$name"

cn="$(container_name "$name")"

exec sudo "$NIXOS_CONTAINER" root-login "$cn" -- su -l agent
